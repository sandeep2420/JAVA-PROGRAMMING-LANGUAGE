/  Writing a program to find a number whether it is even or odd.

import java.util.Scanner; 
// Scanner class is used to take input from the user 
 
// Class definition 
class NumberMethod 
{ 
    // Instance variable (state of object) 
    int num; 
 
    // Method to set the value of instance variable 
    void setNumber(int n) 
    { 
        // Assigning parameter value to instance variable 
        num = n; 
    } 
 
    // Method to check whether number is even or odd 
    void checkEvenOdd() 
    { 
        // Checking condition 
        if (num % 2 == 0) 
        { 
            System.out.println(num + " is an EVEN number"); 
        } 
        else 
        { 
            System.out.println(num + " is an ODD number"); 
        } 
    } 
} 
 
// Main class 
class ConceptsOfMethodsDemo 
{ 
    public static void main(String[] args) 
    { 
        // Creating Scanner object for input 
        Scanner scan = new Scanner(System.in); 
 
        // Asking user for input 
        System.out.print("Enter an integer number: "); 
 
        // Reading integer input 
        int value = scan.nextInt(); 
 
        /* 
         * Creating object of NumberMethod class 
         * Memory is allocated in heap 
         */ 
        NumberMethod obj = new NumberMethod(); 
 
        // Calling method to set value 
        obj.setNumber(value); 
 
        // Calling method to process data 
        obj.checkEvenOdd(); 
 
        // Closing Scanner 
        scan.close(); 
    } 
} 
